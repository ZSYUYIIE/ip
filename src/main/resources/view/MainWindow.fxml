<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="zwee.MainWindow"
            stylesheets="@/styles/style.css">
    <children>
        <VBox AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              spacing="0">
            <ScrollPane fx:id="scrollPane"
                        hbarPolicy="NEVER"
                        fitToWidth="true"
                        VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="dialogContainer"
                          spacing="8"
                          styleClass="dialog-container" />
                </content>
            </ScrollPane>
            <AnchorPane styleClass="input-area" minHeight="65.0">
                <children>
                    <TextField fx:id="userInput"
                               promptText="Type a command..."
                               AnchorPane.topAnchor="8.0"
                               AnchorPane.bottomAnchor="8.0"
                               AnchorPane.leftAnchor="8.0"
                               AnchorPane.rightAnchor="60.0" />
                    <Button fx:id="sendButton"
                            text="Send"
                            onAction="#handleUserInput"
                            AnchorPane.topAnchor="8.0"
                            AnchorPane.bottomAnchor="8.0"
                            AnchorPane.rightAnchor="8.0"
                            prefWidth="50.0" />
                </children>
            </AnchorPane>
        </VBox>
    </children>
</AnchorPane>

